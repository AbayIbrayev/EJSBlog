<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/" method="POST">
  <div class="form-group">
    <label for="titleInput">Title</label>
    <input type="text" name="postTitle" class="form-control" id="titleInput" aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label for="postInput">Post</label>
    <textarea name="postBody" rows="5" class="form-control" id="postInput"></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>


<%- include("partials/footer"); -%>